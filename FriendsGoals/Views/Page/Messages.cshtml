@model FriendsGoals.AppUser

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Messages</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <!--<button class="btnWriteMsg">Write message</button>-->
    @Html.ActionLink("Write message", "WriteMessage", "Page", null, new { @class = "btnWriteMsg" })
    @if (Model.Dialogs != null)
    {
        foreach (FriendsGoals.Models.ChatModel dialog in Model.Dialogs)
        {
            <hr />
            Html.RenderPartial("Dialog", dialog);
        }
        <hr />  
    }
    else
    {
        <p class="no-msg">You have no messages.</p>
    }
</body>
</html>