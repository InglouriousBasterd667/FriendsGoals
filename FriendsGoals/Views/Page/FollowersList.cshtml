@model FriendsGoals.AppUser

@if (Model.Followers != null)
{
    foreach (var follower in Model.Followers)
    {
        <a class="user-link" href="@Url.Action("ShowUser", "Page", new { id = follower.Id }, null)">
            <hr />
            <div class="users-container">
                @if (follower.Files.Any(f => f.FileType == FileType.Avatar))
                {
                    <img class="interlocutor-image" src="~/File?id=@follower.Files.First(f => f.FileType == FileType.Avatar).FileId" alt="avatar" align="left" width="40" height="40" />
                }
                <p class="user-main-level">
                    @follower.Name @follower.UserSurname
                </p>
                @Html.ActionLink("Accept request", "AcceptRequest", "Page", new { id = follower.Id }, new { @class = "btnSide" })
            </div>
        </a>
    }
}