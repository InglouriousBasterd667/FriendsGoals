@model FriendsGoals.AppUser

@if (Model.Following != null)
{
    foreach (var requested in Model.Following)
    {
        <a class="user-link" href="@Url.Action("ShowUser", "Page", new { id = requested.Id }, null)">
            <hr />
            <div class="users-container">
                @if (requested.Files.Any(f => f.FileType == FileType.Avatar))
                {
                    <img class="interlocutor-image" src="~/File?id=@requested.Files.First(f => f.FileType == FileType.Avatar).FileId" alt="avatar" align="left" width="40" height="40" />
                }
                <p class="user-main-level">
                    @requested.Name @requested.UserSurname
                </p>
                @Html.ActionLink("Cancel request", "CancelRequest", "Page", new { id = requested.Id }, new { @class = "btnSide" })
            </div>
        </a>
    }
}
